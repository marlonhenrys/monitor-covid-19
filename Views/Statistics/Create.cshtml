@model monitor_covid19.Models.Statistic

@{
    ViewData["Title"] = "Create";
}

<h2>Cadastrar</h2>

<h4>Estatística</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmedCases" class="control-label"></label>
                <input asp-for="ConfirmedCases" class="form-control" />
                <span asp-validation-for="ConfirmedCases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deaths" class="control-label"></label>
                <input asp-for="Deaths" class="form-control" />
                <span asp-validation-for="Deaths" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recovereds" class="control-label"></label>
                <input asp-for="Recovereds" class="form-control" />
                <span asp-validation-for="Recovereds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">&larr; Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
